
@{
    Layout = "_AdminLayout";
}
@model List<Category>

@{
    ViewData["Title"] = "Category Management";
}

<div class="container">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered" style="background-color: #e6cfe2; margin-top: 10px; ">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryName</td>
                        <td>@category.Description</td>
                        <td>
                            @if (category.IsDeleted)
                            {
                                <span class="text-danger">Deleted</span>
                            }
                            else
                            {
                                <span class="text-success">Active</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.CategoryID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            @if (category.IsDeleted)
                            {

                                <a asp-action="Activate" asp-route-id="@category.CategoryID" class="btn btn-success mx-2"><i class="bi bi-check"></i>Activate</a>
                            }
                            else
                            {

                                <a asp-action="Delete" asp-route-id="@category.CategoryID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="border: 2px solid #ddd; text-align: center; margin:10px;">No Categories.</p>
    }

    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</div>
