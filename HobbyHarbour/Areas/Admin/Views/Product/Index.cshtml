@{
    Layout = "_AdminLayout";
}
@model List<Product>

@{
    ViewData["Title"] = "Product Management";
}

<div class="container">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered mt-4" style="background-color: #e6cfe2; margin-top: 10px; ">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Stock Quantity</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.Price</td>
                        <td>@product.StockQuantity</td>
                        <td>@product.Category.CategoryName</td>
                        <td>
                            @if (product.IsDeleted)
                            {
                                <span class="text-danger">Deleted</span>
                            }
                            else
                            {
                                <span class="text-success">Active</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            @if (product.IsDeleted)
                            {

                                <a asp-action="Activate" asp-route-id="@product.ProductID" class="btn btn-success mx-2"><i class="bi bi-check"></i>Activate</a>
                            }
                            else
                            {

                                <a asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="border: 2px solid #ddd; text-align: center; margin:10px;">No Products.</p>
    }
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</div>
