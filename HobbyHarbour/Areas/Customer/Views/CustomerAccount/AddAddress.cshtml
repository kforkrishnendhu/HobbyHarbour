@{
    Layout = "_CustomerLayout";
}
@model Address

<div class="container">
    <h2 class="text-center">Create Address</h2>

    <form asp-action="AddAddress" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="StreetAddress" class="form-control" placeholder="Street Address" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="City" class="form-control" placeholder="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="State" class="form-control" placeholder="State" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="PostalCode" class="form-control" placeholder="Postal Code" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Country" class="form-control" placeholder="Country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Address</button>
            <a asp-action="Addresses" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@*For client side validation we have inbuilt script file*@
@*//////////*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}