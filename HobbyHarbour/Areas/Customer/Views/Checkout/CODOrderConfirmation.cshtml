@{
    Layout = "_CustomerLayout";
}
@model Order

<div style="text-align: center; padding: 20px; max-width: 600px; margin: 0 auto; background-color: #e6cfe2; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <h2 style="color: #66406c; margin-bottom: 20px;">Order Confirmed</h2>
    <p style="font-size: 16px; margin-bottom: 10px;">Thank you for your order, @Model.User.FirstName!</p>

    <p style="margin-bottom: 10px;">Your order has been confirmed, and it will be delivered to the provided shipping address.</p>

    <p style="margin-bottom: 10px;">Please have the exact amount ready for payment upon delivery.</p>

    <p style="margin-top: 20px; font-size: 14px; margin-bottom: 10px;">For further details, you can <a href="@Url.Action("Orders", "CustomerHome")" style="color: #007bff; text-decoration: none;">view your order details</a>.</p>

    <!-- Add any additional information or instructions here -->

    <p style="margin-top: 20px; font-size: 14px; margin-bottom: 10px;">If you have any questions, please contact our customer support.</p>
</div>

